@page
@model SistemaAcademico.Pages.Alumnos.IndexModel
@{
}
<a asp-page="Create" class="btn btn-success mb-3">Agregar Alumno </a>
@if (Model.Alumnos.Count == 0)
{
    <p>No hay alumnos cargados</p>
}
else
{
    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Dni</th>
                <th>Email</th>
                <th>Fecha De Nacimiento</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var alumno in Model.Alumnos)
            {
                <tr>
                    <td>@alumno.Id</td>
                    <td>@alumno.Nombre</td>
                    <td>@alumno.Apellido</td>
                    <td>@alumno.Dni</td>
                    <td>@alumno.Email</td>
                    <td>@alumno.FechaDeNacimiento</td>
                    <td>
                        <a asp-page="Edit" asp-route-id="@alumno.Id" class="btn btn-warning sa">Editar Alumno</a>
                        <a asp-page="Delete" asp-route-id="@alumno.Id" class="btn btn-danger sn">Eliminar Alumno</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}